<mvc:View controllerName="employees.controller.MasterEmployee"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <HBox id="hBoxEmployee" wrap="Wrap">
                <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>lableEmployee}" class="sapUiSmallMargin"/>
                <Input id="inputEmployee" value="{jsonCountries>/EmployeeId}" maxLength="10" width="200px" class="sapUiSmallMarginEnd"/>
                <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" />
                <Select id="slCountry" selectedKey="{jsonCountries>/CountryKey}" items="{jsonCountries>/ListCountry}" forceSelection="false">
                    <items>
                        <!--<core:Item id="itemUS" key="US" text="{i18n>countryUS}"/>
                        <core:Item id="itemUK" key="UK" text="{i18n>countryUK}"/>
                        <core:Item id="itemES" key="ES" text="{i18n>countryES}"/> -->
                        <core:Item key="{jsonCountries>Key}" text="{jsonCountries>Text}"/>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search" press="onFilter" class="sapUiSmallMarginEnd"/>
                <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMarginEnd"/>
            </HBox>
            <core:Fragment fragmentName="employees.fragment.TableEmployee" type="XML"/>
        </content>
    </Page>
</mvc:View>
